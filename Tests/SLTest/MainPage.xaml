            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Name="TestPanel" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="{lex:Loc Key=ButtonDE}" Height="23" Width="75" Click="ButtonDE_Click" />
            <Button Content="{lex:Loc Key=ButtonEN}" Height="23" Width="75" Click="ButtonEN_Click" />
        </StackPanel>
